{
  "manifest_version": 2,

  "name": "Jira Log Time",
  "description": "Quickly log time in Jira",
  "version": "1.0.2",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
